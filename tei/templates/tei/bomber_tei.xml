<div xml:id="bomber">
   <table>
      <head xml:id="bomber_table">Informationen zum Flugzeug: {{ object }}</head>
      <row>
         <cell role="label">MACR-Nr<note>The Missing Air Crew Reports No.</note></cell>
         <cell role="label">Flugzeugtyp<note>The type of the plane.</note></cell>
         <cell role="label">Flugzeugnr<note>The plane ID.</note></cell>
         <cell role="label">Flugzeugname<note>The name of the plane.</note></cell>
         <cell role="label">Staffel<note>The squadron the bomber belongs to.</note></cell>
         <cell role="label">Datum Absturz<note>The date of the bomber's crash.</note></cell>
         <cell role="label">Absturzursache<note>The reason for the bomber's crash.</note></cell>
         <cell role="label">Zielort<note>The place the bomber targeted.</note></cell>
         <cell role="label">Absturzort<note>The place where the bomber crashed.</note></cell>
      </row>
      <row>
         <cell role="data"><idno>{{ object.macr_nr }}</idno></cell>
         <cell role="data"><rs type="concept" ref="#concept__{{ object.plane_type.id }}">{{ object.plane_type }}</rs></cell>
         <cell role="data"><idno>{{ object.plane_id }}</idno></cell>
         <cell role="data"><name>{{ object.name }}</name></cell>
         <cell role="data"><orgName>{{ object.squadron }}</orgName></cell>
        <cell role="data"><date {% if object.date_of_crash %} when-iso="{{object.date_of_crash|date:'Y-m-d'}}" {% endif %}>{{ object.date_of_crash|date:"Y-m-d" }}</date></cell>
         <cell role="data"><rs type="concept" ref="#concept__{{ object.reason_of_crash.id }}">{{ object.reason_of_crash }}</rs></cell>
         <cell role="data">{% if object.target_place %}<rs type="place" ref="#place__{{ object.target_place.id }}"><orgName>{{ object.target_place }}</orgName></rs> {% endif %}</cell>
         <cell role="data">{% if object.crash_place %}<rs type="place" ref="#place__{{ object.crash_place.id }}"><orgName>{{ object.crash_place }}</orgName></rs> {% endif %}</cell>
      </row>
   </table>
</div>
